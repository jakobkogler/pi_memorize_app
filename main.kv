#:kivy 1.9.1

<RootWidget>:
    id: rootWidget
    fullscreen: True

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            height: '40dp'
            size_hint: 1, .2

            ToggleButton:
                id: tb_learn
                text: 'Learn Pi'
                group: 'modus'
                state: 'down'
                size_hint: .5, 1
                on_press: sm.current = 'learn_screen'

            ToggleButton:
                id: tb_recite
                text: 'Recite Pi'
                group: 'modus'
                size_hint: .5, 1
                on_press: sm.current = 'recite_screen'

        ScreenManager:
            id: sm

            Screen:
                name: 'learn_screen'
                canvas.before:
                    Color:
                        rgb: .8, .2, .2
                        Rectangle:
                            size: self.size

                AnchorLayout:
                    Label:
                        size_hint: None, None
                        size: '150dp', '48dp'
                        text: 'Pi = 3.141592...'

            Screen:
                name: 'recite_screen'
                canvas.before:
                    Color:
                        rgb: .2, .8, .2
                        Rectangle:
                            size: self.size

                AnchorLayout:
                    Label:
                        size_hint: None, None
                        size: '150dp', '48dp'
                        text: "What's the 10th digit of Pi?"
