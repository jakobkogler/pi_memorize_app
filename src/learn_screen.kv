#:kivy 1.9.1

<LearnScreen@Screen>:
    LearnScreenManager:
        id: learn_screen_manager


<LearnScreenManager@Carousel>:
    id: carousel
    loop: False
    on_current_slide: root.slide_changed()


<LearnInfo@FloatLayout>:
    grid: grid_layout

    Label:
        size_hint: .8, .12
        pos_hint: {'center_x': .5, 'center_y': .85}
        id: label
        text: root.label_text
        font_size: self.height * .5

    GridLayout:
        id: grid_layout
        cols: 2
        size_hint: .9, .75
        pos_hint: {'center_x': .5, 'center_y': .4}


<InfoLabel@Label>:
    font_size: self.height * .3
