#:kivy 1.9.1

<ReciteScreen@Screen>:
    orientation: 'vertical'

    Label:
        size_hint: None, .08
        pos_hint: {'center_x': .25, 'top': .975}
        text: root.correct_digits
        font_size: self.height * .5

    Label:
        size_hint: None, .08
        pos_hint: {'center_x': .75, 'top': .975}
        text: root.wrong_attempts
        font_size: self.height * .5

    BoxLayout:
        size_hint: .6, .12
        pos_hint: {'center_x': .5, 'top': .85}

        Label:
            text: "Pi = "
            font_size: self.height * .5

        TextInput:
            text: root.pi_output
            readonly: True
            multiline: False
            font_size: self.height * .5
            padding: [6, (self.height - self.line_height) / 2]

    GridLayout:
        size_hint: .7, .6
        pos_hint: {'center_x': .5, 'y': .07}
        cols: 3

        DigitButton:
            text: '7'
        DigitButton:
            text: '8'
        DigitButton:
            text: '9'
        DigitButton:
            text: '4'
        DigitButton:
            text: '5'
        DigitButton:
            text: '6'
        DigitButton:
            text: '1'
        DigitButton:
            text: '2'
        DigitButton:
            text: '3'
        Label:
            text: ''
        DigitButton:
            text: '0'
        Label:
            text: ''


<DigitButton@Button>:
    on_press: self.parent.parent.digit_pressed(self.text)
    font_size: self.height * .4


<WrongDigitImage@Image>:
    size_hint: .01, .01
    pos_hint: {'center_x': .5, 'center_y': .5}
    source: 'media/X.png'


<AskNamePopup@Popup>:
    size_hint: .9, .9
    title: 'HighScore'
    auto_dismiss: False

    FloatLayout:
        Label:
            size_hint: .7, .4
            pos_hint: {'center_x': .5, 'center_y': .8}
            text: 'Congratulations!\nYou made it into the top 10.\nType in your name:'
            font_size: self.height / 6

        TextInput:
            id: name_input
            text: ''
            size_hint: .6, .12
            pos_hint: {'center_x': .5, 'center_y': .5}
            font_size: self.height / 2
            padding: [6, (self.height - self.line_height) / 2]

        Button
            text: 'Add result to highscore'
            size_hint: .6, .12
            pos_hint: {'center_x': .5, 'center_y': .2}
            on_press: root.add_result(name_input.text)
            font_size: self.height / 2


<NotInTop10Popup@Popup>:
    size_hint: .9, .9
    title: 'HighScore'
    auto_dismiss: False

    FloatLayout:
        Label:
            size_hint: .7, .4
            pos_hint: {'center_x': .5, 'center_y': .8}
            text: "Sorry!\nYou didn't made it into the top 10.\nTry again."
            font_size: self.height / 6

        Button
            text: 'Go back!'
            size_hint: .6, .12
            pos_hint: {'center_x': .5, 'center_y': .2}
            on_press: root.dismiss()
            font_size: self.height / 2
